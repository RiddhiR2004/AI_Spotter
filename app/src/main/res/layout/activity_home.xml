<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp"
    tools:context=".HomeActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Good Morning!"
        android:textColor="@color/text_gray_800"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/icon_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/icon_profile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/gray_200"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile"
            app:tint="@color/gray_500" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_welcome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Today's Workout Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background_light"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Today's Workout"
                        android:textColor="@color/primary_text"
                        android:textSize="13sp" />

                    <!-- Workout Title Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Fire"
                            android:src="@drawable/ic_fire"
                            app:tint="#EF4444" />

                        <TextView
                            android:id="@+id/textView_workout_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="Upper Body Strength"
                            android:textColor="@color/text_gray_800"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Exercise Count Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="Checklist"
                            android:src="@drawable/ic_checkbox_checked"
                            app:tint="@color/gray_500" />

                        <TextView
                            android:id="@+id/textView_exercise_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/poppins"
                            android:text="6 exercises"
                            android:textColor="@color/text_gray_600"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Exercise List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="• Push-ups"
                            android:textColor="@color/text_gray_600"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins"
                            android:text="• Bench Press"
                            android:textColor="@color/text_gray_600"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins"
                            android:text="• Shoulder Press"
                            android:textColor="@color/text_gray_600"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Start Button -->
                    <Button
                        android:id="@+id/button_start_workout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/button_primary_rounded"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Start Today's Workout"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/card_background_light"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Your Progress"
                        android:textColor="@color/primary_text"
                        android:textSize="13sp" />

                    <!-- Progress Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Bar Chart"
                            android:src="@drawable/ic_chart"
                            app:tint="@color/gray_400" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_progress_overall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Overall Progress: 0%"
                                android:textColor="@color/text_gray_800"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView_progress_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins"
                                android:text="0 / 0 exercises completed"
                                android:textColor="@color/text_gray_600"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Quick Actions"
                android:textColor="@color/text_gray_800"
                android:textSize="20sp" />

            <!-- View Progress Button -->
            <Button
                android:id="@+id/button_view_progress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_primary_rounded"
                android:fontFamily="@font/lexend_bold"
                android:text="View Progress"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- View Full Plan Button -->
            <Button
                android:id="@+id/button_view_full_plan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_primary_rounded"
                android:fontFamily="@font/lexend_bold"
                android:text="View Full Plan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- AI Fitness Coach Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ai_coach"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/lexend_bold"
                android:text="AI Fitness Coach"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/button_primary_rounded"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_sparkle"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="20dp"
                app:iconTint="@color/white" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

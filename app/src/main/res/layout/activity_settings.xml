<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_purple_bg"
    tools:context=".SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/text_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="Profile Avatar" />

                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Alex Morgan"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/button_edit_profile"
                    app:layout_constraintStart_toEndOf="@+id/profile_image"
                    app:layout_constraintTop_toTopOf="@+id/profile_image" />

                <TextView
                    android:id="@+id/text_user_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="alex.morgan@email.com"
                    android:textColor="@color/text_light_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                    app:layout_constraintEnd_toStartOf="@+id/button_edit_profile"
                    app:layout_constraintStart_toStartOf="@+id/text_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_user_name" />

                <Button
                    android:id="@+id/button_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_purple"
                    android:fontFamily="@font/poppins_bold"
                    android:minWidth="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/SettingsSectionHeader"
                android:text="ACCOUNT" />

            <!-- Account Details Row -->
            <LinearLayout
                android:id="@+id/row_account_details"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Account Details"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <!-- Connected Accounts Row -->
            <LinearLayout
                android:id="@+id/row_connected_accounts"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connected Accounts"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <TextView
                style="@style/SettingsSectionHeader"
                android:text="NOTIFICATIONS" />

            <!-- Workout Reminders Switch -->
            <LinearLayout
                android:id="@+id/row_workout_reminders"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/deep_purple_bg">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Workout Reminders"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_workout_reminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SettingsSwitch" />
            </LinearLayout>

            <!-- Progress Updates Switch -->
            <LinearLayout
                android:id="@+id/row_progress_updates"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/deep_purple_bg">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Progress Updates"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_progress_updates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SettingsSwitch" />
            </LinearLayout>

            <!-- Promotional Messages Switch -->
            <LinearLayout
                android:id="@+id/row_promotional_messages"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/deep_purple_bg">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Promotional Messages"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_promotional_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SettingsSwitch" />
            </LinearLayout>

            <TextView
                style="@style/SettingsSectionHeader"
                android:text="APP" />

            <!-- Units Row -->
            <LinearLayout
                android:id="@+id/row_units"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Units"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/text_units_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="kg"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_light_grey"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <!-- Language Row -->
            <LinearLayout
                android:id="@+id/row_language"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Language"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/text_language_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="English"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_light_grey"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <!-- Dark Mode Switch -->
            <LinearLayout
                android:id="@+id/row_dark_mode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/deep_purple_bg">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark Mode"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SettingsSwitch" />
            </LinearLayout>

            <TextView
                style="@style/SettingsSectionHeader"
                android:text="SUPPORT and LEGAL" />

            <!-- Help Center Row -->
            <LinearLayout
                android:id="@+id/row_help_center"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Help Center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <!-- Send Feedback Row -->
            <LinearLayout
                android:id="@+id/row_send_feedback"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send Feedback"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <!-- Privacy Policy Row -->
            <LinearLayout
                android:id="@+id/row_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privacy Policy"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <!-- Terms of Service Row -->
            <LinearLayout
                android:id="@+id/row_terms_of_service"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Terms of Service"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/text_light_grey"
                    android:contentDescription="Navigate" />
            </LinearLayout>

            <Button
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_logout_background"
                android:drawableStart="@drawable/ic_settings_logout"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/red_negative"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
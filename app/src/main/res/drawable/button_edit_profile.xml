<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow - largest spread -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#4006f906" />
        </shape>
    </item>
    <!-- Middle glow layer -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#6006f906" />
        </shape>
    </item>
    <!-- Inner glow layer - brightest -->
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#8006f906" />
        </shape>
    </item>
    <!-- Main button -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary" />
            <solid android:color="#1A06f906" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:bottom="0dp" android:left="-100dp" android:right="-100dp" android:top="0dp">
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="@color/accent_blue" android:dashWidth="0dp" android:dashGap="0dp" />
        </shape>
    </item>
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#1A68A7EA"
                android:endColor="@android:color/transparent"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.FITNESS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Override Material3 default purple colors with green -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/primary</item>
        
        <!-- Material3 color scheme overrides for DARK theme -->
        <item name="colorPrimaryContainer">@color/card_background_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondaryContainer">@color/card_background_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorTertiary">@color/primary</item>
        <item name="colorTertiaryContainer">@color/card_background_dark</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        
        <!-- Background colors - DARK THEME -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/card_light</item>
        <item name="colorOnSurfaceVariant">@color/text_light_grey</item>
        
        <!-- Control colors -->
        <item name="colorControlNormal">@color/text_light_grey</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        
        <!-- Switch colors -->
        <item name="colorSwitchThumbNormal">@color/gray_400</item>
        
        <!-- Status bar - DARK -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation bar - DARK -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
    </style>

    <style name="Theme.FITNESS" parent="Base.Theme.FITNESS" />

    <style name="WorkoutCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TimerTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/timer_background</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TimerColonTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:text">:</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProgressStatCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ProgressStatContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ProgressStatLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProgressStatValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ChartCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ChartCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ChartTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChartLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="BottomNavIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/text_light_grey</item>
        <item name="android:contentDescription">Navigation Icon</item>
    </style>

    <style name="BottomNavLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="SettingsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">#B0B0B0</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorOnSurface">#FFFFFF</item>
    </style>

    <style name="SettingsSwitchGreen" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/gray_400</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="SettingsSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WorkoutChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

</resources>
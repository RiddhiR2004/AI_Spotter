<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FITNESS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Add these <style> blocks inside the <resources> tag -->
        <style name="WorkoutCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">16dp</item>
            <item name="android:button">@drawable/checkbox_selector</item>
            <item name="android:fontFamily">@font/poppins</item>
            <item name="android:paddingStart">16dp</item>
            <item name="android:textColor">@color/text_light_grey</item>
            <item name="android:textSize">16sp</item>
        </style>

        <style name="TimerTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/timer_background</item>
            <item name="android:fontFamily">@font/poppins_bold</item>
            <item name="android:paddingStart">24dp</item>
            <item name="android:paddingTop">12dp</item>
            <item name="android:paddingEnd">24dp</item>
            <item name="android:paddingBottom">12dp</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">32sp</item>
        </style>

        <style name="TimerColonTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginStart">8dp</item>
            <item name="android:layout_marginEnd">8dp</item>
            <item name="android:text">:</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">32sp</item>
        </style>
    </style>
</resources>